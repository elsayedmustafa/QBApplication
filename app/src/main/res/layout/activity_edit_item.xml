<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditItemActivity"
    android:layoutDirection="rtl"
    android:background="@color/main_background_color"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    android:background="@color/main_background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="الباركود"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"
            />

        <TextView
            android:id="@+id/txt_barcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:gravity="center_horizontal"
            android:text="الباركود"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="وصف الصنف"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_descripation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:gravity="center_horizontal"
            android:text="وصف الصنف"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app" />
    </LinearLayout>

    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:orientation="horizontal"
         android:weightSum="5">

         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1.5"
             android:text="كود الصنف"
             android:textSize="@dimen/font_size_for_text_of_app"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txt_code_item"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="3.2"
             android:gravity="center_horizontal"
             android:text="كود الصنف"
             android:textColor="@color/third_white"
             android:textSize="@dimen/font_size_for_text_of_app" />
     </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="السعر قبل الخصم"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_price_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:gravity="center_horizontal"
            android:text="السعر"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="الضريبة"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_tax_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:paddingStart="35dp"
            android:gravity="center_horizontal"
            android:text="الضريبة"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="الخصم"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="عدد القطع"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_total_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="السعر الكلى"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/third_white"
            android:textSize="@dimen/font_size_for_text_of_app"

            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="الكمية"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <EditText
            android:id="@+id/edit_current_deliver"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3.2"
            android:gravity="center_horizontal|center_vertical"
            android:hint="أدخل الكميه"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/font_size_for_text_of_app_for_login_up"
            android:inputType="numberDecimal"
            android:background="@drawable/background_layout_for_edittext_in_login"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="حفظ"
        android:background="@drawable/module_bg_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:onClick="SaveUpdatePDNEWQTY"
        android:textSize="@dimen/font_size_for_text_of_app"
        android:textColor="@color/third_white"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="الرجوع"
        android:background="@drawable/module_bg_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:onClick="Back"
        android:textSize="@dimen/font_size_for_text_of_app"
        android:textColor="@color/third_white"

        />

</LinearLayout>
</ScrollView>