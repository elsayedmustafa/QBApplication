<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DetailsFragment"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        >


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:padding="20dp"
    android:background="@drawable/scrollbar_for_recyle"
    android:layout_gravity="center_vertical|center_horizontal"
    >

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="وصف الصنف"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textStyle="bold"
                    android:textColor="@color/third_white"
                    />

                <TextView
                    android:id="@+id/txt_descripation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_horizontal"
                    android:text="وصف الصنف"
                    android:textColor="@color/third_white"
                    android:textSize="@dimen/font_size_for_text_of_app" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="كود الصنف"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textStyle="bold"
                    android:textColor="@color/third_white"/>

                <TextView
                    android:id="@+id/txt_code_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_horizontal"
                    android:text="كود الصنف"
                    android:textColor="@color/third_white"
                    android:textSize="@dimen/font_size_for_text_of_app" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="السعر"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textStyle="bold"
                    android:textColor="@color/third_white"/>

                <TextView
                    android:id="@+id/txt_price_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_horizontal"
                    android:text="السعر"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textColor="@color/third_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="الضريبة"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textStyle="bold"
                    android:textColor="@color/third_white"/>

                <TextView
                    android:id="@+id/txt_tax_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_horizontal"
                    android:text="الضريبة"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:layout_marginStart="1dp"
                    android:textColor="@color/third_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="الخصم"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textStyle="bold"
                    android:textColor="@color/third_white"/>

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textColor="@color/third_white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="السعر للقطعة"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textStyle="bold"
                    android:textColor="@color/third_white"/>

                <TextView
                    android:id="@+id/txt_netprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/font_size_for_text_of_app"
                    android:textColor="@color/third_white"
                    />

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="عدد القطع"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_total_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textColor="@color/third_white"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="السعر الكلى"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textStyle="bold"
            android:textColor="@color/third_white"/>

        <TextView
            android:id="@+id/txt_total_netprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textColor="@color/third_white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="حذف"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/background_layout"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textColor="@color/third_white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="تعديل"
            android:background="@drawable/background_layout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:layout_marginStart="10dp"
            android:textColor="@color/third_white"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/close"
            android:tint="@color/third_white"
            />
    </RelativeLayout>
</FrameLayout>